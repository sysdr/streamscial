{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://streamsocial.com/schemas/user/profile/v1",
  "title": "User Profile Event",
  "description": "Schema for user profile update events",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    },
    "event_type": {
      "type": "string",
      "enum": ["profile_created", "profile_updated", "profile_deleted"],
      "description": "Type of profile event"
    },
    "user_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]{3,30}$",
      "description": "Unique user identifier"
    },
    "profile_data": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]{3,30}$",
          "description": "User display name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "User email address"
        },
        "bio": {
          "type": "string",
          "maxLength": 500,
          "description": "User biography"
        },
        "avatar_url": {
          "type": "string",
          "format": "uri",
          "description": "Profile picture URL"
        },
        "privacy_settings": {
          "type": "object",
          "properties": {
            "profile_visibility": {
              "type": "string",
              "enum": ["public", "private", "friends_only"]
            },
            "allow_messages": {
              "type": "boolean"
            }
          },
          "required": ["profile_visibility", "allow_messages"]
        }
      },
      "required": ["username", "email"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "description": "Event source system"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    }
  },
  "required": ["event_id", "timestamp", "event_type", "user_id", "profile_data", "metadata"]
}
